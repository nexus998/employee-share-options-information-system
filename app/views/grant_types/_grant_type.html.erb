<div class="" id="<%= dom_id grant_type %>">
    <div class="card border-left-primary py-2">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_<%= dom_id grant_type %>">
                    <div class="col mr-2">
                        <div class="text-xl font-weight-bold text-primary mb-1">
                            <%= grant_type.name %>
                        </div>
                    </div>
                </button>
            </div>
            <div id="collapse_<%= dom_id grant_type %>" class="accordion-collapse collapse" data-bs-parent="#<%= dom_id grant_type %>">
                        <div class="accordion-body">
                        <div style="padding-right:1rem;">
                            <%= grant_type.description %>
                            </div>
                        <div style="padding-right:1rem;">
                        <%= t('shared.grant_type.cliff_message_html', percentage: grant_type.cliff_percentage )%>
                        </div>
                            <br>
                            <span style="display:inline-flex; flex-wrap:wrap;gap:0.25rem;">
                                <a href="<%= edit_grant_type_path(grant_type) %>" class="btn btn-primary btn-icon-split">
                                    <span class="icon text-white-50">
                                        <%= material_icon.edit.md_18 %>
                                    </span>

                                    <span class="text"><%= t('shared.edit') %></span>
                                </a>
                                <br>
                                <%= button_to grant_type, class: "btn btn-danger btn-icon-split", method: :delete, data: {"confirm": "Are you sure?"} do %>
                                    <span class="icon text-white-50">
                                        <%= material_icon.delete %>
                                    </span>
                                    <span class="text"><%= t('shared.delete') %></span>
                                <% end %>
                            </span>
                        </div>
                    </div>
        </div>
    </div>

</div>


