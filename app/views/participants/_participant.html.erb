<div class="" id="<%= dom_id participant %>">
    <div class="card border-left-primary py-2">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_<%= dom_id participant %>">
                    <div class="col mr-2">
                        <div class="text-xl font-weight-bold text-primary mb-1">
                          <%= participant.email %> </span>
                        </div>
                    </div>
                </button>
            </div>
            <div id="collapse_<%= dom_id participant %>" class="accordion-collapse" data-bs-parent="#<%= dom_id participant %>">
                        <div class="accordion-body">
                          <p>
                            <strong>Email:</strong>
                            <%= participant.email %>
                          </p>

                          <p>
                            <strong>Employee:</strong>
                            <%= participant.employee_id %>
                          </p>
                          <p>
                            <strong>Role:</strong>
                            <%= participant.role.name %>
                          </p>
                            <br>
                            <span style="display:inline-flex; flex-wrap:wrap;gap:0.25rem;">
                                <a href="<%= edit_participant_path(participant) %>" class="btn btn-primary btn-icon-split">
                                    <span class="icon text-white-50">
                                        <%= material_icon.edit.md_18 %>
                                    </span>

                                    <span class="text"><%= t('shared.edit') %></span>
                                </a>
                                <br>
                                <%= button_to participant, class: "btn btn-danger btn-icon-split", method: :delete, data: {"confirm": "Are you sure?"} do %>
                                    <span class="icon text-white-50">
                                        <%= material_icon.delete %>
                                    </span>
                                    <span class="text"><%= t('shared.delete') %></span>
                                <% end %>
                            </span>
                        </div>
                    </div>
        </div>
    </div>

</div>

