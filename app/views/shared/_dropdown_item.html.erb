<div class="" id="<%= d %>">
    <div class="card border-left-primary py-2">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <button class="accordion-button <%= opened ? "" : "collapsed" %>" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_<%= d %>">
                    <div class="col mr-2">
                        <div class="text-xl text-primary mb-1">
                        <%= yield :title %>
                        </div>
                    </div>
                </button>
            </div>
            <div id="collapse_<%= d %>" class="accordion-collapse <%= opened ? "" : "collapse" %>" data-bs-parent="#<%= d %>">
                <div class="accordion-body">
                    <%= yield %>
                    <br>
                    <span style="display:inline-flex; flex-wrap:wrap;gap:0.25rem;">
                        <a href="<%= edit_path %>" class="btn btn-primary btn-icon-split">
                            <span class="icon text-white-50">
                                <%= material_icon.edit.md_18 %>
                            </span>

                            <span class="text"><%= t('shared.edit') %></span>
                        </a>
                        <br>
                        <%= button_to obj, class: "btn btn-danger btn-icon-split", method: :delete, data: {"confirm": "Are you sure?"} do %>
                            <span class="icon text-white-50">
                                <%= material_icon.delete %>
                            </span>
                            <span class="text"><%= t('shared.delete') %></span>
                        <% end %>
                    </span>
                </div>
            </div>
        </div>
    </div>

</div>



